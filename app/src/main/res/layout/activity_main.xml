<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:scaleType="fitXY"
    android:background="@drawable/hatter" >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_centerVertical="true"
        android:background="@drawable/ahitat_borito_2017a"
        android:contentDescription="@string/description"
        android:scaleType="fitXY"
        android:id="@+id/imageView3" />

    <ImageView
        android:id="@+id/rotate_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="46dp"
        android:contentDescription="@string/description"
        android:onClick="startRotatingImage"
        app:srcCompat="@drawable/ic_ujjam"
        android:elevation="5dp"
        android:background="@drawable/ujjcircle"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="130dp"
        android:background="@android:color/transparent"
        android:fontFamily="serif"
        android:onClick="startMainApp"
        android:text="@string/dailydevotiontitle"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textColorLink="@android:color/black"
        android:textSize="14sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/imageView3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="75dp"
        android:layout_marginLeft="91dp"
        android:layout_marginRight="91dp"
        android:layout_marginTop="56dp"
        android:contentDescription="@string/description"
        android:onClick="startMainApp"
        app:srcCompat="@drawable/ic_ahitat_logo" />

</RelativeLayout>