<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/hatter"
    android:orientation="horizontal"
    android:scaleType="fitCenter">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_centerVertical="true"
        android:background="@drawable/ahitat_borito_2017a"
        android:contentDescription="@string/description"
        android:scaleType="fitXY" />

    <ImageView
        android:id="@+id/rotate_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="45dp"
        android:background="@drawable/ujjcircle"
        android:contentDescription="@string/description"
        android:elevation="4dp"
        android:onClick="startRotatingImage"
        app:srcCompat="@drawable/ic_ujjam" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:contentDescription="@string/description"
        android:onClick="startMainApp"
        app:srcCompat="@drawable/ic_ahitat_logo" />

</RelativeLayout>