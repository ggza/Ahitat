<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:scaleType="fitXY"
    android:background="@drawable/hatter" >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_centerVertical="true"
        android:background="@drawable/ahitat_borito_2017a"
        android:contentDescription="@string/description"
        android:scaleType="fitXY" />

    <LinearLayout
        android:onClick="startMainApp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true">

        <TextView
            android:id="@+id/button2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:background="@android:color/transparent"
            android:drawableBottom="@drawable/ic_ujjam"
            android:onClick="startMainApp"
            android:text="@string/dailydevotiontitle"
            android:textColor="@android:color/black"
            android:textColorLink="@android:color/black"
            tools:textAlignment="center" />

    </LinearLayout>

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:contentDescription="@string/description"
        android:onClick="startMainApp"
        app:srcCompat="@drawable/ic_ahitat_logo" />

</RelativeLayout>