<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main_app"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/hatter"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="gz.rmbgysz.ahitat.MainAppActivity"
    tools:showIn="@layout/app_bar_main_app">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="UselessParent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="UselessParent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:id="@+id/main_app_linear_layout">

        <TextView
            android:text="@string/actual_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="15dp"
            android:textColor="#000000"
            android:textSize="16sp"
            android:id="@+id/actual_date" />

        <TextView
            android:text="@string/delelott"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="15dp"
            android:textColor="#000000"
            android:textSize="16sp"
            android:id="@+id/delelott"
            android:textAlignment="center"
            android:background="@color/half_colorAccent"
            android:padding="3dp" />

        <TextView
            android:text="@string/heading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:textStyle="bold"
            android:textSize="18sp"
            android:id="@+id/de_cim" />

        <TextView
            android:text="@string/de_ige"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:textSize="16sp"
            android:textStyle="italic"
            android:id="@+id/de_ige"/>

        <TextView
            android:text="@string/heading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="16sp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:lineSpacingMultiplier="1.1"
            android:ems="14"
            android:id="@+id/de_szoveg" />

        <TextView
            android:text="@string/de_szerzo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="16sp"
            android:textStyle="italic"
            android:gravity="end"
            android:lineSpacingMultiplier="1.1"
            android:ems="14"
            android:id="@+id/de_szerzo" />

        <TextView
            android:text="@string/bibliaora"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="16sp"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="15dp"
            android:textStyle="italic"
            android:lineSpacingMultiplier="1.1"
            android:id="@+id/bibliaora" />

        <TextView
            android:text="@string/imaora"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="16sp"
            android:textStyle="italic"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="15dp"
            android:lineSpacingMultiplier="1.1"
            android:id="@+id/imaora" />

        <TextView
            android:text="@string/delutan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="15dp"
            android:textColor="#000000"
            android:textSize="16sp"
            android:id="@+id/delutan"
            android:textAlignment="center"
            android:background="@color/half_colorAccent"
            android:padding="3dp" />

        <TextView
            android:text="@string/du_cim"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:textStyle="bold"
            android:textSize="18sp"
            android:id="@+id/du_cim" />

        <TextView
            android:text="@string/du_ige"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:textSize="16sp"
            android:textStyle="italic"
            android:id="@+id/du_ige" />

        <TextView
            android:text="@string/du_szoveg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="16sp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:lineSpacingMultiplier="1.1"
            android:ems="14"
            android:id="@+id/du_szoveg" />

        <TextView
            android:text="@string/du_szerzo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/content_main_app_vertical_margin"
            android:textColor="#000000"
            android:textSize="16sp"
            android:textStyle="italic"
            android:gravity="end"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:lineSpacingMultiplier="1.1"
            android:ems="14"
            android:id="@+id/du_szerzo" />

    </LinearLayout>

    </ScrollView>

</RelativeLayout>
