<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:scaleType="fitXY"
    android:background="@drawable/hatter" >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_centerVertical="true"
        android:background="@drawable/ahitat_borito_2017a"
        android:contentDescription="@string/description"
        android:scaleType="fitXY"
        android:id="@+id/imageView3" />

    <com.andexert.library.RippleView
        android:id="@+id/button2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:rv_rippleDuration="600"
        android:gravity="center_horizontal|bottom"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="45dp"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            app:srcCompat="@drawable/ic_ujjam"
            android:onClick="startMainApp"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textColorLink="@android:color/black"
            android:textSize="0sp"
            android:textStyle="bold"
            android:contentDescription="@string/app_name"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true" />
    </com.andexert.library.RippleView>

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:contentDescription="@string/description"
        app:srcCompat="@drawable/ic_ahitat_logo" />

</RelativeLayout>