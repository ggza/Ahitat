<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:scaleType="fitXY"
    android:background="@drawable/hatter" >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_centerVertical="true"
        android:background="@drawable/ahitat_borito_2017a"
        android:contentDescription="@string/description"
        android:scaleType="fitXY" />

    <TextView
        android:id="@+id/ige"
        android:text="@string/ige"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textStyle="normal|italic"
        android:textAlignment="center"
        android:textSize="14sp"
        android:layout_marginLeft="70dp"
        android:layout_marginRight="70dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"
        android:lineSpacingExtra="2sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="serif" />

    <LinearLayout
        android:onClick="startMainApp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">

        <Button
            android:id="@+id/button2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColorLink="@android:color/black"
            android:drawableBottom="@drawable/ic_ujjam"
            android:background="@android:color/transparent"
            android:textColor="@android:color/black"
            android:onClick="startMainApp"
            android:layout_marginTop="280dp" />
    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_ahitat_logo"
        android:id="@+id/imageView2"
        android:contentDescription="@string/description"
        android:onClick="startMainApp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="65dp" />

</RelativeLayout>